@page
@model Blogmenia.Areas.Admin.Pages.Featured.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";

    var i = 1;
}


<style type="text/css">

    #dvHolder {
        display: block;
    }
</style>

<div id="dvHolder" class="container-fluid p-0">
    <div class="row mb-2">
        <div class="col-md-10">
            <h3 class="h3 mb-3"> Featured Post List </h3>
        </div>


    </div>

    <div class="row">
        <div class="col ibg_white">
            <div class="col-12   p-3 table-responsive" style="min-height:500px">

                <table id="DT_load" class="table table-striped table-bordered table-hover" style=" width:100%;">
                    <thead class="thead-dark">
                        <tr>
                            <th> Srno</th>
                            <th>  Description</th>
                            <th>Action</th>


                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.post)
                        {

                            <tr>
                                <th> @i</th>
                                <th>   @item.Title</th>
                                <th><a  asp-page="/BlogPost/Upsert" asp-area="Admin" asp-route-id="@item.Id" >Edit</a> </th>
                            </tr>

                            i++;
                        }



                    </tbody>
                </table>
            </div>
        </div>


    </div>
    @Html.AntiForgeryToken()
</div>

@section Scripts{


    <script src="~/lib/datatable/jquery.dataTables.min.js"></script>


}
